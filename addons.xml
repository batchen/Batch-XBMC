<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.icelibrary"
       name="IceLibrary"
       version="0.9.8"
       provider-name="Batch">
    <requires>
        <import addon="xbmc.python" version="1.0"/>
        <import addon="script.module.simplejson" version="2.0.10"/>
    </requires>
    <extension point="xbmc.python.pluginsource"
               library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary>Stream scene releases from the megaupload links listed on Icefilms.info</summary>
        <description>Turns your XBMC into an instant free on-demand media-center. Browse the play movies and series found on Icefilms directly from your library.</description>
    </extension>
</addon>

